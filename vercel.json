{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python",
      "config": {
        "runtime": "python3.12",
        "includeFiles": [
          "api/**",
          "detector.py",
          "paraphraser.py", 
          "rewriter.py"
        ],
        "excludeFiles": [
          "node_modules/**",
          "frontend/**",
          "*.md"
        ]
      }
    }
  ],
  "functions": {
    "api/index.py": {
      "memory": 3008,
      "maxDuration": 60
    }
  }
}